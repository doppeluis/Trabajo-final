<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/links/edit/{{link.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Nombre del item" value="{{link.title}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="url" name="url" class="form-control" placeholder="Imagen" value="{{link.url}}">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Descripcion ">{{link.description}}</textarea>
                </div>
                   <div class="form-group">
                    <textarea name="costo"  class="form-control" placeholder="Costo">{{link.costo}}</textarea>
                </div>
                   <div class="form-group">
                    <textarea name="cantidad"  class="form-control" placeholder="Cantidad ">{{link.cantidad}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>